{
    "properties": {
        "amdPackages": "apprt@^3.1.4"
    },
    "load": {
        "bundleLocations": ["localbundles", "bundles"],

        "allowedBundles": [
            "system@^3.1.4",
            "console@^3.1.4",
            "splashscreen@^3.1.4",
            "map@^3.1.4",
            "templatelayout@^3.1.4",
            "toolset@^3.1.4",
            "basemaptoggler@^3.1.4",
            "basemapgallery@^3.1.4",
            "dn_urltoolactivator",
            "parametermanager@^3.1.4",
            "overviewmap@^3.1.4",
            "banner@^3.x",
            "agsprinting@^3.1.4"
        ]

    },

    "bundles": {
       "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "map": {
            "MapState": {
                "initialExtent": {
                    "xmin": -1100000,
                    "ymin": 4000000,
                    "xmax": 3500000,
                    "ymax": 8800000,
                    "spatialReference": {
                        "wkid": 3857
                    }
                }
            },
            "MapModelFactory": {
                "_configLocation": "${app}:services-init.json"
            },
            "MappingResourceRegistryFactory": {
                "_knownServicesLocation": "${app}:services.json"
            }
        }
    }
}
